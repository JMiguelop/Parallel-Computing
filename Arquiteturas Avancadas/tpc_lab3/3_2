#!/bin/sh

#PBS -N result
#PBS -l walltime=01:30:00
#PBS -q mei


#PBS -m abe
#PBS -M joao.miguelop@gmail.com

#PBS -l nodes=1:ppn=4:tesla

echo "Loading Modules..."
module purge
module load gnu/4.8.2
module load cuda/7.0.28
echo "DONE Loading Modules..."

cd ~/tpc_lab2/
export CUDA=yes
make clean
make

read -r node_info<$PBS_NODEFILE

echo "Going to run..."

./bin/cuda_bin

echo "Done..."
